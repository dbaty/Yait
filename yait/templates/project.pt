<layout metal:use-macro="api.layout">
<metal:breadcrumbs metal:fill-slot="breadcrumbs">
  <li>
    <span class="separator">&rarr;</span>
    <span tal:replace="project.title">
  </li>
</metal:breadcrumbs>

<metal:content metal:fill-slot="content">

<h1>Assigned to me</h1>

<table class="listing expanded">
  <thead>
    <tr>
      <th i18n:translate="">Ref.</th>
      <th i18n:translate="">Title</th>
      <th i18n:translate="">Reporter</th>
      <th i18n:translate="">Priority</th>
      <th i18n:translate="">Deadline</th>
    </tr>
  </thead>
  <tbody>
    <tr tal:repeat="issue project.issues"
        tal:attributes="class repeat['issue'].odd() and 'odd'">
      <td>
        <a tal:content="issue.ref"
           tal:attributes="href api.route_url('issue_view', project_name=project.name, issue_ref=issue.ref)"/>
      </td>
      <td>
        <a tal:content="issue.title"
           tal:attributes="href api.route_url('issue_view', project_name=project.name, issue_ref=issue.ref)"/>
        <!-- FIXME -->
      <td tal:content="issue.reporter"/>
      <td tal:content="issue.priority"/>
      <td tal:content="issue.deadline and issue.deadline.strftime('%d %b %Y')"/>
    </tr>
  </tbody>
</table>

<h1>Watching (but not assigned to me)</h1>

