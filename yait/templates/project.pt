<layout metal:use-macro="api.layout">
<metal:breadcrumbs metal:fill-slot="breadcrumbs">
  <li>
    <span class="separator">&rarr;</span>
    <span tal:replace="project.title">
  </li>
</metal:breadcrumbs>

<metal:content metal:fill-slot="content">

<div class="project-dashboard">

  <div class="floatable-form-panel last-floatable-form-panel">
    <ul class="reports">
      <li tal:condition="n_assigned">
        <a href="FIXME">Assigned to me (<span tal:replace="n_assigned"/>)</a>
      </li>
      <li tal:condition="n_watching">
        <a href="FIXME">Watching (<span tal:replace="n_watching"/>)</a>
      </li>
      <li tal:condition="n_assigned">
        <a href="FIXME">Not assigned (<span tal:replace="n_not_assigned"/>)</a>
      </li>
    </ul>
  </div>

  <div class="floatable-form-panel last-floatable-form-panel">
    <form method="post"
          tal:attributes="action api.route_url('project_search', project_name=project.name)"
          tal:define="form search_form;
                      field_options {};
                      renderField api.form_macros['renderField']">
      <fieldset class="compact-fieldset">
        <metal:field tal:define="field_name 'text'; field_options {'size': 30}"
                     metal:use-macro="renderField"/>
        <metal:field tal:define="field_name 'assignee'"
                     metal:use-macro="renderField"/>
        <metal:field tal:define="field_name 'status'"
                     metal:use-macro="renderField"/>
        <div class="buttons">
          <button type="submit" class="positive" i18n:translate="">
            Search
          </button>
          <a class="cancel" tal:attributes="href api.route_url('users')">Cancel</a>
        </div>
      </fieldset>
    </form>
  </div>
</div>

<h1 class="clear">Recent activity</h1>

<dl class="recent-activity">
  <tal:loop tal:repeat="activity recent_activity">
    <dt tal:content="structure activity['desc']"/>
    <dd>
      <a tal:content="structure activity['text']"
         href="#" onclick="expandChangeTextInRecentActivity(this)"></a>
    </dd>
  </tal:loop>
</dl>

</metal:content>
</layout>
