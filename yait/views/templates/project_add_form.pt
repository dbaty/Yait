<layout metal:use-macro="api.layout">
<metal:content metal:fill-slot="content">

<form method="post"
      id="addProjectForm"
      tal:define="renderField api.form_macros['renderField'];
                  field_options {}"
      tal:attributes="action api.url_of('addProject')">

  <fieldset>
    <legend>Add a new project</legend>

    <metal:field tal:define="field_name 'name';
                             field_options dict(size=15)"
                 metal:use-macro="renderField"/>

    <metal:field tal:define="field_name 'title';
                             field_options dict(size=50)"
                 metal:use-macro="renderField"/>

    <div class="formRow">
      <input id="is_public" name="is_public" type="checkbox" value="1"
             tal:attributes="checked form.is_public.data"/>
      <label for="is_public" style="display: inline">
        Make this project public, i.e. accessible to anonymous users.
      </label>
    </div>

    <div class="buttons">
      <button type="submit" class="positive">
        <img tal:attributes="src api.url_of('static/img/tick.png')" alt=""/>
        Add project
      </button>
    </div>
  </fieldset>
</form>

</metal:content>
</layout>
