<layout metal:use-macro="api.layout">
<metal:title metal:fill-slot="title">
  &mdash; <span tal:replace="project.title"/>
</metal:title>
<metal:header metal:fill-slot="header">
  &mdash;
  <a tal:attributes="href api.urlOf(project.name)" tal:content="project.title"/>
</metal:header>

<metal:content metal:fill-slot="content">

<ul id="actions">
  <li tal:condition="api.hasPermission(u'Participate in project', project)"
      tal:define="action_url api.urlOf('%s/add_issue_form' % project.name)">
    <a tal:attributes="href action_url"
       class="noUnderline"
       ><img tal:attributes="src api.urlOf('static/img/add.png')"
             width="32" height="32" alt="add issue"/></a>
    <a tal:attributes="href action_url">add issue</a>
  </li>
  <li tal:condition="api.hasPermission(u'Administer project', project)"
      tal:define="action_url api.urlOf('%s/control_panel' % project.name)">
    <a tal:attributes="href action_url"
       class="noUnderline"
       ><img tal:attributes="src api.urlOf('static/img/configure.png')"
             width="32" height="32" alt="configure project"/></a>
    <a tal:attributes="href action_url">configure project</a>
  </li>
</ul>

<ul>
  <li tal:repeat="issue issues">
    <a tal:content="'%d: %s' % (issue.ref, issue.title)"
       tal:attributes="href api.urlOf('%s/%d' % (project.name, issue.ref))">
    </a>
  </li>
</ul>

</metal:content>
</layout>
